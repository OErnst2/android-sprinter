<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".activities.TrackScreenActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:map="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/map"
              android:layout_weight="1.5"
              tools:context=".activities.MapsActivity"
              android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <LinearLayout android:layout_width="match_parent"

                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_weight="1"
                      android:background="#fff"
                      android:paddingTop="5dp"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <TextView android:layout_width="wrap_content"
                      android:text="informace o trase"
                      android:textSize="28dp"
                      android:layout_marginTop="10dp"
                      android:id="@+id/name_view"
                      android:layout_gravity="center"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="80dp"
                       android:id="@+id/icon"
                       android:layout_gravity="center"
                       android:src="@drawable/city"
                       android:layout_height="80dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="informace o trase"
                      android:id="@+id/length_view"
                      android:layout_gravity="center"
                      android:textSize="20dp"
                      android:layout_marginTop="5dp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="informace o trase"
                      android:id="@+id/difficulty_view"
                      android:textSize="20dp"
                      android:layout_marginTop="5dp"
                      android:layout_gravity="center"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="86 %"
                      android:id="@+id/rating_view"
                      android:textSize="28dp"
                      android:layout_marginTop="5dp"
                      android:layout_gravity="center"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:gravity="bottom"
                      android:background="#fff"
                      android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:gravity="center"

                          android:background="#fff"
                          android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent"
                              android:id="@+id/stars"
                              android:layout_marginStart="50dp"
                              android:layout_marginEnd="50dp"
                              android:layout_height="wrap_content">
                    <ImageButton android:layout_width="0dp"
                                 android:layout_weight="1"
                                 android:src="@drawable/ic_star_gold_border"
                                 android:background="#00000000"
                                 android:adjustViewBounds="true"
                                 android:scaleType="centerCrop"

                                 android:id="@+id/star_one"
                                 android:layout_height="wrap_content"/>
                    <ImageButton android:layout_width="0dp"
                                 android:layout_weight="1"
                                 android:src="@drawable/ic_star_gold_border"
                                 android:background="#00000000"
                                 android:scaleType="centerCrop"
                                 android:adjustViewBounds="true"

                                 android:id="@+id/star_two"
                                 android:layout_height="wrap_content"/>
                    <ImageButton android:layout_width="0dp"
                                 android:layout_weight="1"
                                 android:src="@drawable/ic_star_gold_border"
                                 android:background="#00000000"
                                 android:scaleType="centerCrop"
                                 android:adjustViewBounds="true"

                                 android:id="@+id/star_three"
                                 android:layout_height="wrap_content"/>
                    <ImageButton android:layout_width="0dp"
                                 android:layout_weight="1"
                                 android:src="@drawable/ic_star_gold_border"
                                 android:background="#00000000"
                                 android:scaleType="centerCrop"

                                 android:id="@+id/star_four"
                                 android:adjustViewBounds="true"
                                 android:layout_height="wrap_content"/>
                    <ImageButton android:layout_width="0dp"
                                 android:layout_weight="1"
                                 android:src="@drawable/ic_star_gold_border"
                                 android:background="#00000000"
                                 android:scaleType="centerCrop"
                                 android:id="@+id/star_five"
                                 android:adjustViewBounds="true"
                                 android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>


            <Button android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:text="download"
                    android:foreground="@drawable/ripple_corners"
                    android:background="#4CAF50"
                    android:id="@+id/download_button"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"/>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>