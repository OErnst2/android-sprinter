<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".activities.StatisticsActivity">
    <TextView android:layout_width="match_parent"
              android:text="STATISTICS"
              android:textColor="#000000"
              android:textSize="30dp"
              android:id="@+id/title"
              android:gravity="center"
              android:layout_marginTop="15dp"
              android:layout_height="wrap_content"/>

    <ScrollView android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:layout_height="0dp">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:gravity="center"
                          android:layout_marginTop="1dp"
                          android:paddingTop="15dp"
                          android:paddingBottom="15dp"
                          android:background="#eee"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="match_parent"
                          android:textColor="#000000"
                          android:text="Uběhnuto celkem"
                          android:gravity="center"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                          android:textColor="#000000"
                          android:id="@+id/run_km"
                          android:text="0"
                          android:gravity="center"
                          android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:gravity="center"
                          android:layout_marginTop="1dp"
                          android:paddingTop="15dp"
                          android:paddingBottom="15dp"
                          android:background="#eee"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="match_parent"
                          android:textColor="#000000"
                          android:text="Uběhnutý čas"
                          android:gravity="center"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                          android:textColor="#000000"
                          android:id="@+id/run_time"
                          android:text="0"
                          android:gravity="center"
                          android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:gravity="center"
                          android:layout_marginTop="1dp"
                          android:paddingTop="15dp"
                          android:paddingBottom="15dp"
                          android:background="#eee"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="match_parent"
                          android:textColor="#000000"
                          android:text="Průměrná rychlost"
                          android:gravity="center"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                          android:textColor="#000000"
                          android:id="@+id/average_speed"
                          android:text="0"
                          android:gravity="center"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:gravity="center"
                          android:layout_marginTop="1dp"
                          android:paddingTop="15dp"
                          android:paddingBottom="15dp"
                          android:background="#eee"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="match_parent"
                          android:textColor="#000000"
                          android:text="Uběhnuto tratí"
                          android:gravity="center"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                          android:textColor="#000000"
                          android:id="@+id/run_tracks"
                          android:text="0"
                          android:gravity="center"
                          android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <Button android:layout_width="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="See all statistics"
                android:background="#FFC107"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/all_stat_button"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>